@model BugReportComment

<div class="card">
  <div class="card-header p-2 d-flex align-items-center justify-content-between">
    <div>
      @Model.Profile.ProfileName()
    </div>
    <div>
      @Model.DateCreated.CultureDateTime()
    </div>
  </div>
  <div class="card-body">
    @Html.DisplayFor(p => p.Content)
  </div>
</div>
