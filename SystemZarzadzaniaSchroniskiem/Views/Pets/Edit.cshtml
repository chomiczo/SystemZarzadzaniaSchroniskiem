@model Pet

@{
    ViewData["Title"] = "Edycja zwierzęcia";
}

<page-layout title="@ViewData["Title"]" title-icon="fa-circle-plus">
    <form asp-controller="Pets" asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="row mt-4 d-flex gap-2">
            <div class="row">
                <div class="col-lg-2">
                    @Html.FormInputFor(p => p.Name)
                </div>

                <div class="col-lg-2">
                    @Html.FormInputFor(p => p.Weight)
                </div>

                <div class="col-lg-2">
                    @Html.FormSelectFor(p => p.Gender)
                </div>

                <div class="col-lg-2">
                    @Html.FormSelectFor(p => p.Species, "species-input")
                </div>

                <div class="col-lg-4">
                    <div class="input-group">
                        <span class="input-group-text">Rasa</span>
                        <input class="form-control @Html.InvalidClassNameFor(p => p.BreedId)" id="breed-query"
                            type="text" autocomplete="off" name="BreedName" value="@Model.Breed.Name">
                        <input type="hidden" asp-for="BreedId" id="breed-input" value="@Model.BreedId">
                    </div>
                    <div class="dropdown">
                        <ul class="dropdown-menu" id="breed-dropdown"></ul>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    @Html.FormSelectFor(p => p.AdoptionStatus)
                </div>

                <div class="col-lg-4">
                    <div class="input-group">
                        <span class="input-group-text">
                            @Html.DisplayNameFor(p => p.AdmissionDate)
                        </span>
                        <input type="date" class="form-control" 
                               value="@Model.AdmissionDate.ToString("yyyy-MM-dd")" name="AdmissionDate">
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="input-group">
                        <span class="input-group-text">
                            @Html.DisplayNameFor(p => p.BirthDate)
                        </span>
                        <input type="date" class="form-control"
                               value="@Model.BirthDate.ToString("yyyy-MM-dd")" name="Birth Date">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <textarea class="form-control" placeholder="Opis zwierzęcia"
                        name="Description">@Model.Description</textarea>
                </div>
            </div>

            <div class="row">
                @Html.HiddenFor(p => p.ImagePath)
                <div class="col-lg-8 d-flex justify-content-end">
                    <div class="input-group">
                        <input class="form-control" type="file" asp-for="FileUpload">
                    </div>
                </div>
                <div class="col-lg-4 d-flex justify-content-end">
                    <button class="btn btn-primary d-flex justify-content-between align-items-center gap-2">
                        <i class="fas fa-check"></i>
                        Zapisz zmiany
                    </button>
                </div>
            </div>
        </div>
        @Html.HiddenFor(p => p.OwnerProfileId)
    </form>
</page-layout>

<link rel="stylesheet" type="text/css" href="@Url.Content("~/css/PetsForm.css")">

@section Scripts {
    <script src="@Url.Content("~/js/PetsForm.js")"></script>
}
