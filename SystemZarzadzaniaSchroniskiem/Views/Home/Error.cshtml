@model ErrorViewModel

<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="alert alert-primary"
        style="background-color: var(--sc-navy); color: var(--sc-lightblue); border-color: var(--sc-lightblue);">
        <div class="d-flex gap-4 align-items-center">
          <div class="p-4">
            <icon name="fa-ghost" style="font-size: 5rem; color: var(--sc-orange);" />
          </div>
          <div class="d-flex flex-column flex-grow-1 justify-content-center">
            <h1>Ups...</h1>
            <h2>
              Wystąpił błąd numer
              <span style="color: var(--sc-orange); font-weight: bold;">
                @ViewBag.StatusCode
              </span>
            </h2>
            <div>
              @switch (ViewBag.StatusCode)
              {
                case 404:
                  <p>
                    Wygląda na to, że ta strona nie istnieje
                  </p>
                  break;
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
