@model RegisterModel

<script>
    window.location.href = '/UserProfiles/Register'
</script>

@* @{
    ViewData["Title"] = "Rejestracja";
}

</style>

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg p-4 animated-card">
            <h2 class="text-center">Utwórz nowe konto</h2>
            <hr />
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="needs-validation"
                novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

                <div class="form-floating mb-3">
                    <br />
                    <input asp-for="Input.Email" class="form-control dynamic-input" autocomplete="username"
                        aria-required="true" placeholder="Email" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <br />
                    <input asp-for="Input.Password" type="password" class="form-control dynamic-input"
                        autocomplete="new-password" aria-required="true" placeholder="Hasło" />
                    <label asp-for="Input.Password">Hasło</label>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <br />
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control dynamic-input"
                        autocomplete="new-password" aria-required="true" placeholder="Potwierdź hasło" />
                    <label asp-for="Input.ConfirmPassword">Potwierdź hasło</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <br />
                    <input asp-for="Input.FirstName" type="text" class="form-control dynamic-input"
                        autocomplete="new-password" aria-required="true" placeholder="Potwierdź hasło" />
                    <label asp-for="Input.FirstName">Imię</label>
                    <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                </div>

                <button id="registerSubmit" type="submit"
                    class="w-100 btn btn-lg btn-primary dynamic-button">Zarejestruj</button>
            </form>
        </div>
    </div>
</div>

section Scripts {
    <partial name="_ValidationScriptsPartial" />
} *@
